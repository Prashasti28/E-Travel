<%- include('partials/header') %>

<body class="hotel-booking-body">
  <%- include('navbar') %>
  <div class="booking-form">
    <form action="/hotel-booking-submit" method="post">
      <div>
        <h2>Book a Hotel</h2>
      </div>
      <hr>
      <div class="booking-form-input-box">
        <div class="form-group">
          <label for="hotelLocation">Holiday Destination</label>
          <select class="form-control" name="hotelLocation" required>
            <option selected>Choose</option>
            <option value="SJO">San Jose, California</option>
            <option value="BOS">Boston, Massachusetts</option>
            <option value="LAX">Los Angeles, California</option>
            <option value="PHX">Phoenix, Arizona</option>
            <option value="SFO">San Francisco, California</option>
            <option value="JAN">Jackson, Mississippi</option>
            <option value="CLE">Cleveland, Ohio</option>
            <option value="SEA">Seattle, Washington</option>
            <option value="PHL">Philadelphia, Pennsylvania</option>
            <option value="ALB">Albany, New York</option>
          </select>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="checkInDate">Check-In</label>
            <input type="date" class="form-control" name="checkInDate" required>
          </div>
          <div class="form-group col-md-6">
            <label for="checkOutDate">Check-Out</label>
            <input type="date" class="form-control" name="checkOutDate" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="guestCount">Guest(s)</label>
            <input type="number" value="2" class="form-control" name="guestCount" required>
          </div>
          <div class="form-group col-md-6">
            <label for="roomCount">Room(s)</label>
            <input type="number" value="1" class="form-control" name="roomCount" required>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-lg btn-primary">Search Hotels</button>
    </form>
  </div>

  <%- include('partials/footer') %>
