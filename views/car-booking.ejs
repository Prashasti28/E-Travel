<%- include('partials/header') %>

<body class="car-booking-body">
  <%- include('navbar') %>
  <div class="booking-form">
    <form action="/car-booking-submit" method="post">
      <div>
        <h2>Rent a Car</h2>
      </div>
      <hr>
      <div class="booking-form-input-box">

        <div class="form-group">
          <label for="pickupLocation">Pick-Up Location</label>
          <select class="form-control" name="pickupLocation">
            <option selected>Choose</option>
            <option value="SJO">San Jose, California</option>
            <option value="BOS">Boston, Massachusetts</option>
            <option value="LAX">Los Angeles, California</option>
            <option value="PHX">Phoenix, Arizona</option>
            <option value="SFO">San Francisco, California</option>
            <option value="JAN">Jackson, Mississippi</option>
            <option value="CLE">Cleveland, Ohio</option>
            <option value="SEA">Seattle, Washington</option>
            <option value="PHL">Philadelphia, Pennsylvania</option>
            <option value="ALB">Albany, New York</option>
          </select>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="pickupDate">Pick-Up Date</label>
            <input type="date" class="form-control" name="pickupDate">
          </div>
          <div class="form-group col-md-6">
            <label for="dropoffDate">Drop-Off Date</label>
            <input type="date" class="form-control" name="dropoffDate">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="seatingCapacity">Seating Capacity</label>
            <select type="number" class="form-control" name="seatingCapacity">
              <option selected>Choose</option>
              <option value=5>5-Seater</option>
              <option value=7>7-Seater</option>
              <option value=8>8-Seater</option>
            </select>
          </div>
          <div class="form-group col-md-6">
            <label for="carType">Type</label>
            <select class="form-control" name="carType">
              <option value="hatchback" selected>Hatchback</option>
              <option value="sedan">Sedan</option>
              <option value="suv">SUV</option>
            </select>
          </div>
        </div>
        <button type="submit" class="btn btn-lg btn-primary">Search Cars</button>
      </div>
    </form>
  </div>

  <%- include('partials/footer') %>
